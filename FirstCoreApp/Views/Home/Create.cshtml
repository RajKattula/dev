@model Employee
@inject IEmployeeRepository _emp;

@{
    ViewBag.title = "Create page";
}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control m-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control m-2" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Age" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Age" class="form-control m-2" />
            <span asp-validation-for="Age" class="text-danger"></span>
          </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Submit</button>
            Total record : @_emp.GetAll().Count();
        </div>
    </div>


</form>